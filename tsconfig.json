{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,

    "jsx": "react-jsx",

    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
